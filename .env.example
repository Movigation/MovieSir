# ============================================================
# MovieSir Environment Variables Template
# ============================================================
# 이 파일을 복사하여 .env.local 또는 .env.production 으로 저장하세요.
# cp .env.example .env.local
# cp .env.example .env.production
# ============================================================

# ------------------------------------------------------------
# Database Configuration
# ------------------------------------------------------------
DATABASE_HOST=localhost
DATABASE_PORT=5432
DATABASE_NAME=moviesir
DATABASE_USER=your_db_user
DATABASE_PASSWORD=your_db_password
DATABASE_URL=postgresql://${DATABASE_USER}:${DATABASE_PASSWORD}@${DATABASE_HOST}:${DATABASE_PORT}/${DATABASE_NAME}

# ------------------------------------------------------------
# JWT Configuration
# ------------------------------------------------------------
# Generate with: openssl rand -base64 64
JWT_SECRET_KEY=your_jwt_secret_key_here
B2B_JWT_SECRET_KEY=your_b2b_jwt_secret_key_here

# ------------------------------------------------------------
# Redis Configuration
# ------------------------------------------------------------
REDIS_URL=redis://redis:6379

# ------------------------------------------------------------
# AI Service Configuration
# ------------------------------------------------------------
AI_SERVICE_URL=http://ai:8001

# ------------------------------------------------------------
# B2B External API (Dog Fooding - B2C가 B2B API 호출)
# ------------------------------------------------------------
B2B_API_URL=http://backend:8000
B2C_API_KEY=sk-moviesir-your-api-key

# ------------------------------------------------------------
# Email Configuration (Resend - 권장)
# ------------------------------------------------------------
RESEND_API_KEY=re_your_resend_api_key
RESEND_FROM_EMAIL=noreply@moviesir.cloud
RESEND_FROM_NAME=MovieSir

# ------------------------------------------------------------
# SMTP Configuration (Legacy - deprecated)
# ------------------------------------------------------------
SMTP_HOST=smtp.gmail.com
SMTP_PORT=587
SMTP_USER=your_email@gmail.com
SMTP_PASSWORD=your_app_password
SMTP_FROM=your_email@gmail.com

# ------------------------------------------------------------
# OAuth Configuration (Optional)
# ------------------------------------------------------------
GOOGLE_CLIENT_ID=
GOOGLE_CLIENT_SECRET=
GITHUB_CLIENT_ID=
GITHUB_CLIENT_SECRET=

# ------------------------------------------------------------
# Frontend Configuration
# ------------------------------------------------------------
VITE_API_BASE_URL=http://localhost:8000
VITE_AUTH_BASE_URL=http://localhost:8000
